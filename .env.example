# Model configuration
# Currently only "anthropic" is fully supported
MODEL_PROVIDER=anthropic
MODEL_ID=claude-sonnet-4-20250514
MODEL_API_KEY=sk-ant-...

# ── Channels (at least one must be configured) ──────────────────────────

# Discord bot token (optional — enables Discord channel)
DISCORD_TOKEN=

# WhatsApp via Baileys (optional — QR code login on first start)
WHATSAPP_ENABLED=false
# Auth state directory (default: ~/.nano-openclaw/whatsapp-auth)
WHATSAPP_AUTH_DIR=
# Comma-separated phone numbers allowed to interact (empty = allow all)
WHATSAPP_ALLOW_FROM=

# Slack via Socket Mode (optional — set both tokens to enable)
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
# Comma-separated Slack user IDs allowed to interact (empty = allow all)
SLACK_ALLOW_FROM=

# Workspace directory (default: repo's workspace/ directory with bootstrap files).
# Set this to use a custom workspace path; otherwise the built-in workspace/ is used.
WORKSPACE_DIR=

# Agent directory for Pi SDK state (default: ~/.nano-openclaw)
AGENT_DIR=

# Web search (optional — enables web_search tool)
BRAVE_API_KEY=

# Puppeteer (optional — override Chrome/Chromium path for screenshots)
PUPPETEER_EXECUTABLE=

# Sandbox (optional — run agent exec commands inside Docker)
# Requires Docker to be installed and running.
SANDBOX_ENABLED=true
# Container scope: "session" (one container per chat session) or "shared" (one for all)
SANDBOX_SCOPE=session
# Docker image (default: node:22-slim)
SANDBOX_IMAGE=
# Network mode: "none" (fully isolated, default), "bridge" (internet access)
SANDBOX_NETWORK=
# Memory limit (e.g., "512m", "1g")
SANDBOX_MEMORY=
# CPU limit (e.g., 1.0 = one core)
SANDBOX_CPUS=
# Max PIDs (default: 256)
SANDBOX_PIDS_LIMIT=
# Shell command to run after container creation (e.g., "apt-get update && apt-get install -y git")
SANDBOX_SETUP_COMMAND=

# ── Memory Consolidation ────────────────────────────────────────────────
# LLM-driven consolidation extracts facts → MEMORY.md and events → HISTORY.md
# MEMORY.md is injected into every system prompt for passive recall.
# Set to "false" to disable (default: enabled)
CONSOLIDATION_ENABLED=true
# Number of new messages before triggering consolidation (default: 50)
CONSOLIDATION_THRESHOLD=50

# ── Heartbeat (proactive agent wake-up) ────────────────────────────────
# Periodically wakes the agent to check workspace state, pending tasks,
# and memory — enabling proactive behavior even without incoming messages.
# Set to "false" to disable (default: enabled)
HEARTBEAT_ENABLED=true
# Interval between heartbeats in milliseconds (default: 1800000 = 30 min)
HEARTBEAT_INTERVAL_MS=1800000
# Minimum interval between heartbeats — prevents rapid-fire on restarts (default: 600000 = 10 min)
HEARTBEAT_MIN_INTERVAL_MS=600000

# ── Scheduler ──────────────────────────────────────────────────────────
# Max concurrent job executions (default: 3)
SCHEDULER_MAX_CONCURRENCY=3
# Per-job execution timeout in ms (default: 300000 = 5 min)
SCHEDULER_JOB_TIMEOUT_MS=300000
# Consecutive failures before auto-disabling a job (default: 5)
SCHEDULER_MAX_FAILURES=5
